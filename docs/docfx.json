{
  "build": {
    "content": [
      {
        "files": [
          "**.md",
          "**.yml"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "xRegistry MCP Server",
      "_appName": "xRegistry MCP Server",
      "_appFooter": "<a href='https://spec-works.github.io/'>SpecWorks Factory</a> | <a href='https://github.com/spec-works/xRegistry-MCP-Server'>GitHub</a>",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_gitContribute": {
        "repo": "https://github.com/spec-works/xRegistry-MCP-Server",
        "branch": "main"
      }
    }
  }
}
